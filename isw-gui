#!/usr/bin/python3
"""ISW GUI - Graphical interface for MSI laptop fan control."""

import sys
import os

# Add src directory to path so the package can be found
sys.path.insert(0, os.path.join(os.path.dirname(os.path.abspath(__file__)), 'src'))

from isw.gui.app import run_gui

if __name__ == '__main__':
    run_gui()
